[core]
  excludesfile = ~/.gitexcludes
  # I have no idea why the python3 feature is broken when committing with vim
  editor       = nvim
[color "branch"]
  current   = bold green
  local     = yellow
  remote    = magenta
  upstream  = cyan
[color "status"]
  # staged changes
  added     = bold green
  updated   = green
  # un-staged changes
  changed   = yellow
  untracked = red
  nobranch  = red
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
